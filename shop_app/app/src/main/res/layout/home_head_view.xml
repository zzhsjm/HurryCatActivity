<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f4f2f2">

    <com.example.asus.ele_me.RoundImageView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:scaleType="centerInside"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        app:borderRadius="6dp"
        app:type="round"
        android:src="@drawable/home_pic_top" />
    <include
        android:id="@+id/page"
        layout="@layout/page_navigation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <com.example.asus.ele_me.RoundImageView
            android:id="@+id/iv_home_head"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="4dp"
            android:layout_height="70dp"
            app:type="round"
            app:borderRadius="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/discount" />
        <com.example.asus.ele_me.RoundImageView
            android:id="@+id/iv_home_head_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="70dp"
            app:type="round"
            app:borderRadius="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/everybodyeat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <com.example.asus.ele_me.RoundImageView
            android:id="@+id/iv_home_head_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="4dp"
            android:layout_height="70dp"
            app:type="round"
            app:borderRadius="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/invite" />
        <com.example.asus.ele_me.RoundImageView
            android:id="@+id/iv_home_head_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="70dp"
            app:type="round"
            app:borderRadius="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/neighbour" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="推荐商家"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:textColor="#2e2e2e"
        android:textSize="17sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c1bdbd" />

</LinearLayout>