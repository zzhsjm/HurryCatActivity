<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#d9d6d6">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2"/>

    <RelativeLayout
        android:id="@+id/register_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#1bffffff">

        <Button
            android:id="@+id/register_btn_cancel"
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/goback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/register_btn_cancel"
            android:text="登录"
            android:textColor="#ff3d58"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="23sp" />
    </RelativeLayout>
    <EditText
        android:drawableLeft="@drawable/user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:layout_marginTop="60dp"
        android:background="@drawable/textview_shape"
        android:ems="10"
        android:textColorHint="#8c8e8e"
        android:textColor="#000000"
        android:textSize="15sp"
        android:id="@+id/resetpwd_edit_name"
        android:hint="请输入您的用户名"
        android:layout_below="@+id/register_view"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <EditText
        android:drawableLeft="@drawable/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_marginLeft="30dp"
        android:textColorHint="#8c8e8e"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_shape"
        android:ems="10"
        android:id="@+id/resetpwd_edit_pwd_old"
        android:hint="请输入您的密码"
        android:layout_below="@+id/resetpwd_edit_name" />



    <EditText
        android:drawableLeft="@drawable/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textview_shape"
        android:textColorHint="#8c8e8e"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:id="@+id/resetpwd_edit_pwd_new"
        android:layout_below="@+id/resetpwd_edit_pwd_old"
        android:layout_centerHorizontal="true"
        android:hint="请确认您的密码" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定"
        android:id="@+id/register_btn_sure"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:background="@drawable/btn_selector"
        android:layout_below="@+id/resetpwd_edit_pwd_new"
        android:layout_marginTop="40dp" />

</RelativeLayout>